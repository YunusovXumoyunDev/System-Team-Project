<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#080037"
    tools:context=".screen.CreateScreen">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="50dp"
        android:layout_marginVertical="55dp">

        <TextView
            android:id="@+id/create_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ro'yhatdan o'tish"
            android:textColor="#F6CE00"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/name_et"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/name_et"
            android:layout_width="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/create_txt"
            android:layout_height="44dp"
            android:paddingStart="12dp"
            android:layout_marginTop="16dp"
            android:textSize="14sp"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:layout_marginHorizontal="25dp"
            android:background="@color/white"
            android:textColorHint="@color/black"
            android:hint="Ism"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/surname_et"
            android:layout_width="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/name_et"
            android:layout_height="44dp"
            android:paddingStart="12dp"
            android:layout_marginTop="16dp"
            android:textSize="14sp"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:layout_marginHorizontal="25dp"
            android:background="@color/white"
            android:textColorHint="@color/black"
            android:hint="Familiya"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/username_et"
            android:layout_width="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/surname_et"
            android:layout_height="44dp"
            android:paddingStart="12dp"
            android:layout_marginTop="16dp"
            android:textSize="14sp"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:layout_marginHorizontal="25dp"
            android:background="@color/white"
            android:textColorHint="@color/black"
            android:hint="Foydalanuvchi nomi"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/password_et"
            android:layout_width="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/username_et"
            android:layout_height="44dp"
            android:paddingStart="12dp"
            android:layout_marginTop="16dp"
            android:textSize="14sp"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:layout_marginHorizontal="25dp"
            android:background="@color/white"
            android:textColorHint="@color/black"
            android:hint="Parol"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/phone_et"
            android:layout_width="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/password_et"
            android:layout_height="44dp"
            android:paddingStart="12dp"
            android:layout_marginTop="16dp"
            android:textSize="14sp"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:layout_marginHorizontal="25dp"
            android:background="@color/white"
            android:textColorHint="@color/black"
            android:hint="Tel raqam"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/mail_et"
            android:layout_width="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/phone_et"
            android:layout_height="44dp"
            android:paddingStart="12dp"
            android:layout_marginTop="16dp"
            android:textSize="14sp"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:layout_marginHorizontal="25dp"
            android:background="@color/white"
            android:textColorHint="@color/black"
            android:hint="e-mail pochta manzili"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/button"
            android:layout_width="200dp"
            android:layout_height="65dp"
            android:layout_marginTop="25dp"
            android:backgroundTint="#F6CE00"
            android:fontFamily="@font/bungee"
            android:text="Ro'yhatdan o'tish"
            android:textColor="@color/white"
            android:textSize="14dp"
            app:layout_constraintTop_toBottomOf="@id/mail_et"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>